
<section id="ccr-left-section" class="col-md-8">

	

	<div class="ccr-last-update">
		<div class="update-ribon">Last Update</div> <!-- /.update-ribon -->
		<span class="update-ribon-right"></span> <!-- /.update-ribon-left -->
		<div class="update-news-text" id="update-news-text">
			<ul id="latestUpdate">  
				<% @lastupdate.each do |news| %>
				<li>
					<%= link_to news.title, home_news_detail_path(:id => news.id) %>
				</li>
				<% end %>
			</ul>
		</div> <!-- /.update-text -->

		<div class="update-right-border"></div> <!-- /.update-right-border -->
	</div> <!-- / .ccr-last-update -->


	<section id="ccr-slide-main" class="carousel slide" data-ride="carousel">				

		<!-- Carousel items -->
		<div class="carousel-inner">
			<% @firstslide.each do |slide| %>
			<div class="active item">
				<div class="container slide-element">
					<%= image_tag slide.photo, :alt => slide.photo %>
					<p><a href="#"><%= slide.title %></a></p>
				</div> <!-- /.slide-element -->
			</div> <!--/.active /.item -->
			<% end %>

			<% @under1stslide.each do |slide| %>
			<div class="item">
				<div class="container slide-element">
					<%= image_tag slide.photo, :alt => slide.photo %>
					<p><a href="#"><%= slide.title %></a></p>
				</div> <!-- /.slide-element -->
			</div> <!--/.active /.item -->
			<% end %>

		</div> <!-- /.carousel-inner -->

		<!-- slider nav -->
		<a class="carousel-control left" href="#ccr-slide-main" data-slide="prev"><i class="fa fa-arrow-left"></i></a>
		<a class="carousel-control right" href="#ccr-slide-main" data-slide="next"><i class="fa fa-arrow-right"></i></a>

		<ol class="carousel-indicators">
			<li data-target="#ccr-slide-main" data-slide-to="0" class="active"></li>
			<li data-target="#ccr-slide-main" data-slide-to="1"></li>
			<li data-target="#ccr-slide-main" data-slide-to="2"></li>
			<li data-target="#ccr-slide-main" data-slide-to="3"></li>
		</ol> <!-- /.carousel-indicators -->


	</section><!-- /#ccr-slide-main -->




	<section id="ccr-latest-post-gallery">
		<div class="ccr-gallery-ttile">
			<span></span> 
			<p>Others Latest Post Gallery</p>
		</div><!-- .ccr-gallery-ttile -->


		<ul class="ccr-latest-post">
			<% @posts.each do |post| %>
			<li>
				<div class="ccr-thumbnail">
					<%= image_tag post.image, :alt => post.image %>
					<p><%= link_to 'Read More', {:controller => "blog", :action => "post_detail", :id => post.id} %></p>
				</div>
				<h4>
					<%= link_to post.title, {:controller => "blog", :action => "post_detail", :id => post.id} %></h4>
				</li>
				<% end %>
			</ul> <!-- /.ccr-latest-post -->

		</section> <!--  /#ccr-latest-post-gallery  -->

		<section class="bottom-border">
		</section> <!-- /#bottom-border -->




		<section id="ccr-world-news">
			<div class="ccr-gallery-ttile">
				<span></span> 
				<p>Apple News</p>
			</div> <!-- .ccr-gallery-ttile -->

			<section class="featured-world-news">
				<% @firstnews.each do |news| %>
				<div class="featured-world-news-img"><%= image_tag news.image, :alt => news.image %></div>
				<div class="featured-world-news-post">
					<h5><%= link_to news.title, {:action => 'news_detail', :id => news.id} %></h5>
					<%= truncate (sanitize news.content, tags: %w(table tr td), attributes: %w(id class style)).gsub(/&amp;/i,"&").gsub("&#39;", "'").gsub("&rsquo;", "'").gsub("&nbsp;", ""), length: 300, separator: ' ', omission: '... (continued)' %>
					<div class="like-comment-readmore">
						<%= link_to "Read More", {:action => 'news_detail', :id => news.id}, :class => "read-more" %>
					</div> <!-- /.like-comment-readmore -->
				</div>
				<% end %>
			</section> <!-- /#featured-world-news -->


			<ul>
				<% @under1stnews.each do |news| %>
				<li>
					<div class="ccr-thumbnail">
						<%= image_tag news.image.url(:thumb), :alt => news.image %>
						<p><%= link_to "Read More", {:action => 'news_detail', :id => news.id} %></p>
					</div>
					<h6><%= link_to truncate(news.title, :length => 30, separator: ' '), {:action => 'news_detail', :id => news.id} %></h6>
				</li>
				<% end %>
			</ul>

		</section> <!-- / #ccr-world-news -->











	</section><!-- /.col-md-8 / #ccr-left-section -->

